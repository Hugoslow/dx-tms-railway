# Database connection (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Environment
NODE_ENV=production

# Secret key for daily reset endpoint (set to a random string)
RESET_SECRET_KEY=your-secret-key-here

# JWT Secret for session tokens (IMPORTANT: Use a long random string)
JWT_SECRET=generate-a-long-random-string-at-least-32-characters

# Port (Railway sets this automatically)
PORT=3000
